<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:id="@+id/rv_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:id="@+id/ll_nama1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_person1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_person" />

                <TextView
                    android:id="@+id/tv_rvitem_nama1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Andi Wawan " />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_godarah1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_nama1"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_darah1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_goldarah" />

                <TextView
                    android:id="@+id/tv_rvitem_darah1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Golongan Darah " />
                <TextView
                    android:id="@+id/tv_rvitem_darah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_location1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_godarah1"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_location1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tv_rvitem_lokasi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Jl Tentara Pelajar No 177A Yogyakarta " />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_location1"
                android:layout_margin="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_phone1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/tv_rvitem_phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0899-8800-8888" />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>